# ============================================
# CONFIGURATION DÉVELOPPEMENT
# ============================================

# Environnement de l'API
API_ENV=development

# ============================================
# CONFIGURATION FLASK
# ============================================

# Point d'entrée de l'application Flask
FLASK_APP=wsgi.py

# Mode développement Flask
FLASK_PROD=false

# ============================================
# CONFIGURATION SÉCURITÉ (DEV)
# ============================================

# Clés de développement (ne pas utiliser en production!)
SECRET_KEY_APP=dev-secret-key-not-secure
SECRET_KEY_JWT=dev-jwt-key-not-secure

# ============================================
# CONFIGURATION BASE DE DONNÉES (DEV)
# ============================================

# Configuration PostgreSQL pour développement
POSTGRES_DB=val_dev
POSTGRES_USER=val_dev
POSTGRES_PASSWORD=val_dev

# Port exposé pour connexion externe (dev uniquement)
DB_PORT=5433

# ============================================
# CONFIGURATION SERVEUR (DEV)
# ============================================

# Port du serveur de développement
SERVER_PORT=5001

# Adresse IP d'écoute
SERVER_HOST=0.0.0.0

# ============================================
# CONFIGURATION SWAGGER/API
# ============================================

# URL pour accéder à Swagger
SWAGGER_URL=/api/docs

# Localisation du fichier OpenAPI
API_URL=/static/openapi.json