# ============================================
# CONFIGURATION ENVIRONNEMENT
# ============================================

# Environnement de l'API (development, production, testing)
API_ENV=production

# ============================================
# CONFIGURATION FLASK
# ============================================

# Point d'entrée de l'application Flask
FLASK_APP=wsgi.py

# Mode production Flask (true/false)
FLASK_PROD=true

# ============================================
# CONFIGURATION SÉCURITÉ
# ============================================

# Clé secrète pour l'application Flask (CHANGER EN PRODUCTION!)
SECRET_KEY_APP=your-super-secret-key-change-me-in-production

# Clé secrète pour JWT (CHANGER EN PRODUCTION!)
SECRET_KEY_JWT=your-jwt-secret-key-change-me-in-production

# ============================================
# CONFIGURATION BASE DE DONNÉES
# ============================================

# Configuration PostgreSQL
POSTGRES_DB=val
POSTGRES_USER=val
POSTGRES_PASSWORD=val-secure-password-change-me

# Port de la base de données (exposé seulement en dev)
DB_PORT=5432

# URI de connexion complète (pour référence, sera construite automatiquement)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@val-db:5432/${POSTGRES_DB}

# ============================================
# CONFIGURATION SERVEUR
# ============================================

# Port du serveur
SERVER_PORT=5000

# Adresse IP d'écoute
SERVER_HOST=0.0.0.0

# ============================================
# CONFIGURATION SWAGGER/API
# ============================================

# URL pour accéder à Swagger
SWAGGER_URL=/api/docs

# Localisation du fichier OpenAPI
API_URL=/static/openapi.json

# ============================================
# CONFIGURATION DÉVELOPPEMENT
# ============================================

# Décommentez ces lignes pour le développement local
# API_ENV=development
# FLASK_PROD=false
# DB_PORT=5433
# SERVER_PORT=5001